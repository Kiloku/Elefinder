{
	"manifest_version": 2,
	"name": "Elefinder",
	"version": "0.1",
	"description": "Allows finding mastodon users more easily.",
	"homepage_url": "https://github.com/kiloku/Elefinder",
	
	"icons": {
		"48": "icons/elefinder-48.png",
		"96": "icons/elefinder-96.png"
	},

	"permissions": ["activeTab", "storage"],

	"browser_action": {
		"default_icon": "icons/elefinder-32.png",
		"default_title": "Elefinder",
		"default_popup": "popup/user_finder.html"
	},
	"browser_specific_settings": {
		"gecko": {
			"id": "{4f7c66cd-26f8-4569-8034-78cbc6ac1d0b}"
		}
	},

	"options_ui": {
    	"page": "settings/options.html"
  	}
}